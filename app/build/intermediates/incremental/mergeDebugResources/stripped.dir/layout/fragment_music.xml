<?xml version="1.0" encoding="utf-8"?>
                                                                   
<LinearLayout
    android:id="@+id/musicfragment_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doubanmusicbackground"
     android:tag="layout/fragment_music_0" xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:id="@+id/Input_musictext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/doubanmusicsearchtext"
        android:textColorHint="@color/doubanmusicsearchhint"
        android:hint="请输入所需查找的音乐名"
        />
    <Button
        android:id="@+id/Search_musicbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/doubanmusicbutton"
        android:text="搜索音乐"
        android:textColor="@color/white"
        />
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/musiccontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/music_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
         